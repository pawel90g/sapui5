<core:FragmentDefinition 
    xmlns:m="sap.m" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core">
    <m:Popover title="{title}" class="sapUiContentPadding" placement="Bottom">
        <layout:VerticalLayout>
            <m:Label text="{description}" />
            <m:Label text="{tags}" />
            <m:Label text="{from} - {to}" />
        </layout:VerticalLayout>
        <m:footer>
            <m:Toolbar>
                <m:ToolbarSpacer/>
                <m:Button id="close" text="{i18n>close}" press="onPopoverClose" />
            </m:Toolbar>
        </m:footer>
    </m:Popover>
</core:FragmentDefinition>
